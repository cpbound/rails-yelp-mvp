<div class="container">
  <h1>Restaurants 'n' stuff</h1>
  <h1></h1>
    <div class="d-flex justify-content-between align-items-center">
      <% @restaurants.each do |restaurant| %>
        <div class="card" style="width: 18rem;">
          <img src="https://loremflickr.com/320/240/food" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.category %></h6>      </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= restaurant.address %></li>
            <li class="list-group-item"><%= restaurant.phone_number %></li>
          </ul>
          <div class="card-body">
            <%= link_to "View", restaurant_path(restaurant.id)  %>
            <a href="#" class="card-link">Some Other Shit</a>
          </div>
        </div>
      <% end %>
    </div>
</div>
