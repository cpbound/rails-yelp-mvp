<div class="container mt-5">
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORIES, include_blank: false %>
    <%= f.submit "Submit Review", class: "btn btn-primary" %>
  <% end %>
</div>
